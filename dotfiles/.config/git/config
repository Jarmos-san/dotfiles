[init]
    defaultBranch = main

[include]
    path = ~/.config/git/credentials

[merge]
    tool = nvim

[mergetool]
    keepBackup = false
    prompt = false
    keepTemporaries = false

[mergetool "nvim"]
    ; INFO: More information about the following suggestions can be found at:
    ; https://smittie.de/posts/git-mergetool
    ; cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c '$wincmd J'
    cmd = "nvim -d -c \"wincmd l\" -c \"normal ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""

[push]
    default = current

[core]
    editor = nvim
    pager = bat
    whitespace = fix

[color "branch"]
    current = white magenta bold
    local = green bold
    remote = blue bold
    upstream = magenta bold
    plain = white bold

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = green bold
    updated = yellow bold
    changed = red bold
    untracked = cyan black bold
    localBranch = cyan bold
    remoteBranch = red bold

[commit]
    ; gpgSign = true
    ; TODO: Uncomment the following line after reconfigurng Git
    gpgSign = false

[status]
    showStash = true
    relativepaths = false

[tag]
    forceSignAnnotated = true
    gpgSign = false

[url "git@github.com:"]
    insteadof = "gh:"

[url "git@gist.github.com/"]
   insteadof = "gist:"

[url "git@github.com:Jarmos-san/"]
   insteadof = "jarmos:"

[url "git@github.com:"]
    insteadof = "https://github.com"

[help]
    autocorrect = 1

[color "status"]
    added = green bold
    updated = yellow bold
    changed = red bold
    untracked = cyan black bold
    localBranch = cyan bold
    remoteBranch = red bold

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "branch"]
    current = black magenta bold
    local = green bold
    remote = blue bold
    upstream = magenta bold
    plain = white bold

[submodule]
    recurse = true

[alias]
    st = status -sb
    ci = commit -m
    ca = commit -am
    cb = checkout -b
    pl = pull --rebase
    pu = push
    cl = clone
    vb = branch -vv
    rv = remote -v
    ra = remote add origin
    tar = archive --format=tar
    zip = archive --format=zip
    logs = log --pretty=oneline --max-count=20
